
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>

@section Scripts
{
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <script type="text/javascript">
                            $(document).ready(function () {

                                var connection = new signalR.HubConnectionBuilder()
                                    .withUrl("https://localhost:7238/carhub")
                                    .build();

                                $("#constatus").text(connection.state);

                                connection.start().then(function () {
                                    $("#constatus").text(connection.state);
                                    setInterval(()=>{
                                    connection.invoke("CarCount");
                                    },1000)
                                }).catch(function (err) {
                                    console.log(err);
                                });

                                connection.on("CarCount", function (message) {
                                    $("#carcount").text(message);
                                });

                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="alert alert-info">
            Bağlantının Durumu: <strong id="constatus"></strong>
        </div>
        <div class="alert alert-danger">
            Araç Sayısı: <strong id="carcount"></strong>
        </div>
    </div>
</div>


