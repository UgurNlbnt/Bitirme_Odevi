<section class="hero-wrap hero-wrap-2 js-fullheight"
         style="
        background-image: url('https://assets.live.dxp.maginfrastructure.com/f/73114/4096x2731/2acd80e687/ema_travel-by-car_rental_4096x2731.jpg');
        background-size: cover;
        background-position: center 10%; /* Üst kısmı biraz daha göster */
        background-repeat: no-repeat;
        data-stellar-background-ratio: 0.5;
    ">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs">
                    <span class="mr-2">
                        <a href="index.html">Anasayfa <i class="ion-ios-arrow-forward"></i></a>
                    </span>
                    <span>@ViewBag.v1 <i class="ion-ios-arrow-forward"></i></span>
                </p>
                <h1 class="mb-3 bread">@ViewBag.v2</h1>
            </div>
        </div>
    </div>
</section>
