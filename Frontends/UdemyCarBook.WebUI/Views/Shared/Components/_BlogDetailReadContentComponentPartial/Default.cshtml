@model ResultBlogViewModel

<div class="blog-detail-container">
    <h2 class="blog-title">@Model.Title</h2>

    <div class="blog-image-wrapper">
        <img src="@Model.CoverImageUrl" alt="@Model.Title" class="blog-image img-fluid rounded shadow">
    </div>

    <div class="blog-description">
        <p>@Model.Description</p>
    </div>
</div>

<style>
    .blog-detail-container {
        background: #fff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
    }

    .blog-detail-container:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .blog-title {
        font-size: 2rem;
        font-weight: 700;
        color: #222;
        margin-bottom: 20px;
        text-align: center;
    }

    .blog-image-wrapper {
        text-align: center;
        margin-bottom: 25px;
    }

    .blog-image {
        border-radius: 12px;
        max-height: 450px;
        object-fit: cover;
    }

    .blog-description {
        font-size: 1.05rem;
        line-height: 1.8;
        color: #444;
        text-align: justify;
    }

    @@media (max-width: 768px) {
        .blog-title {
            font-size: 1.5rem;
        }
        .blog-description {
            font-size: 0.95rem;
        }
    }
</style>
