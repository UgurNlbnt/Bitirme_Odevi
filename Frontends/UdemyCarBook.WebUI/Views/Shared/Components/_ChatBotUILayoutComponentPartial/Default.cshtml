        <!-- Header -->
        <div class="chat-header">
            <div class="d-flex align-items-center">
                <div style="width: 40px; height: 40px; border-radius: 50%; background: white; display: flex; align-items: center; justify-content: center; margin-right: 12px; font-size: 24px;">
                    <a href="#">
                        <img src="https://www.shutterstock.com/image-vector/cute-robot-waving-hand-cartoon-600nw-2268493229.jpg"
