<!-- Chat Widget Button -->
<div id="chatWidget">
    <!-- Chat Butonu -->
    <button id="chatButton" class="chat-button">
        <span class="badge" id="unreadCount" style="display: none;">3</span>
        Destek
        <i class="bi bi-robot"></i>
    </button>

    <!-- Chat Penceresi -->
