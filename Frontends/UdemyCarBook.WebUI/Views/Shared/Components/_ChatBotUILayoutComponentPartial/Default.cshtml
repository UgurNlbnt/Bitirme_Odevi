                '✅ Kredi Kartı (güvence bedeli için)\n\n' +
                '25 yaşından küçükseniz ek ücret uygulanır.',
            followUp: ['rental', 'insurance']
        },
        'insurance': {
            text: '--Sigorta Paketlerimiz:--\n' +
                '• Standart Sigorta: Ücretsiz (dahil)\n' +
                '• Tam Kasko: +50₺/gün\n' +
                '• Mini Onarım: +25₺/gün\n\n' +
                'Tüm araçlarımız kasko sigortası ile korunmaktadır.',
            followUp: ['prices', 'rental']
        },
        'locations': {
            "text": "--Şubelerimiz:--\n" +
                    "🏢 Altunizade,Üsküdar\n" +
                    "🏢 Bahariye Cd,Kadıköy\n" +
                    "🏢 Barbaros Bulvarı,Beşiktaş\n" +
                    "🏢 Levent,Şişli\n" +
                    "🏢 Maslak,Sarıyer\n" +
                    "🏢 Finans Merkezi,Ataşehir\n" +
                    "🏢 Bağdat Cd.,Maltepe\n" +
                    "🏢 Sahil Yolu Cd.,Pendik\n" +
                    "🏢 Kennedy Cd.,Bakırköy\n" +
                    "🏢 Şenlikköy Mah.,Florya\n" +
                    "🏢 Gürpınar Yolu Cd.,Beylikdüzü\n" +
                    "🏢 Tarabya Mah.,Sarıyer\n" +
                    "🏢 Rüstem Paşa Mah.,Eminönü\n" +
                    "🏢 Halaskargazi Cd.,Şişli\n" +
                    "🏢 İstiklal Cd.,Beyoğlu\n\n" ,
            "followUp": ["rental", "support"]
        },
        'support': {
            text: '--Bize Ulaşın:--' +
                '☎️ Telefon: 0850 123 45 67\n' +
                '📧 Email: info@carbook.com\n' +
                '💬 WhatsApp: 0532 123 45 67\n\n' +
                'Müşteri hizmetlerimiz 7/24 hizmetinizdedir!',
            followUp: ['rental', 'locations']
        },
        'default': {
            text: '❓ Üzgünüm, bu konuda yardımcı olamıyorum. Lütfen aşağıdaki konulardan birini seçin:',
            followUp: ['prices', 'rental', 'requirements', 'insurance', 'locations', 'support']
        }
    };

    // Chat Widget JavaScript
    document.addEventListener('DOMContentLoaded', function () {
        const chatButton = document.getElementById('chatButton');
        const chatWindow = document.getElementById('chatWindow');
        const closeChat = document.getElementById('closeChat');
        const chatBody = document.getElementById('chatBody');
        const chatInput = document.getElementById('chatInput');
        const sendMessage = document.getElementById('sendMessage');
        const unreadCount = document.getElementById('unreadCount');

        // Chat'i aç/kapat
        chatButton.addEventListener('click', function () {
            chatWindow.style.display = chatWindow.style.display === 'none' ? 'flex' : 'none';
            if (chatWindow.style.display === 'flex') {
                unreadCount.style.display = 'none';
                chatInput.focus();
            }
        });

        closeChat.addEventListener('click', function () {
            chatWindow.style.display = 'none';
        });

        // Hızlı cevap butonları
        document.addEventListener('click', function (e) {
            if (e.target.classList.contains('quick-reply-btn')) {
                const question = e.target.getAttribute('data-question');
                handleQuickReply(question, e.target.textContent);
            }
        });

        // Mesaj gönder
        sendMessage.addEventListener('click', sendUserMessage);
        chatInput.addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                sendUserMessage();
            }
        });

        function sendUserMessage() {
            const message = chatInput.value.trim();
            if (message === '') return;

            addMessage(message, 'user');
            chatInput.value = '';

            setTimeout(() => {
                showTypingIndicator();
                setTimeout(() => {
                    hideTypingIndicator();
                    const response = findBestResponse(message);
                    addMessage(response.text, 'bot');
                    showFollowUpButtons(response.followUp);
                }, 1500);
            }, 500);
        }

        function handleQuickReply(question, buttonText) {
            addMessage(buttonText, 'user');
            document.getElementById('quickReplies').style.display = 'none';

            setTimeout(() => {
                showTypingIndicator();
                setTimeout(() => {
                    hideTypingIndicator();
                    const response = chatResponses[question];
                    addMessage(response.text, 'bot');
                    showFollowUpButtons(response.followUp);
                }, 1000);
            }, 300);
        }

        function addMessage(text, sender) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${sender}-message`;
            const time = new Date().toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' });

            messageDiv.innerHTML = `
                    <div class="message-content">${text.replace(/\n/g, '<br>')}</div>
                    <small class="message-time">${time}</small>
                `;

            chatBody.appendChild(messageDiv);
            chatBody.scrollTop = chatBody.scrollHeight;
        }

        function showTypingIndicator() {
            const typingDiv = document.createElement('div');
            typingDiv.className = 'message bot-message';
            typingDiv.id = 'typingIndicator';
            typingDiv.innerHTML = `
                    <div class="typing-indicator">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                `;
            chatBody.appendChild(typingDiv);
            chatBody.scrollTop = chatBody.scrollHeight;
        }

        function hideTypingIndicator() {
            const indicator = document.getElementById('typingIndicator');
            if (indicator) indicator.remove();
        }

        function findBestResponse(message) {
            message = message.toLowerCase();

            if (message.includes('fiyat') || message.includes('ücret') || message.includes('kaç')) {
                return chatResponses['prices'];
            } else if (message.includes('kiralama') || message.includes('rezervasyon')) {
                return chatResponses['rental'];
            } else if (message.includes('belge') || message.includes('evrak')) {
                return chatResponses['requirements'];
            } else if (message.includes('sigorta') || message.includes('kasko')) {
                return chatResponses['insurance'];
            } else if (message.includes('şube') || message.includes('adres') || message.includes('nerede')) {
                return chatResponses['locations'];
            } else if (message.includes('iletişim') || message.includes('telefon') || message.includes('destek')) {
                return chatResponses['support'];
            }

            return chatResponses['default'];
        }

        function showFollowUpButtons(followUpKeys) {
            const buttonLabels = {
                'prices': '💰 Fiyatlar',
                'rental': '🚗 Kiralama',
                'requirements': '📋 Belgeler',
                'insurance': '🛡️ Sigorta',
                'locations': '📍 Şubeler',
                'support': '📞 İletişim'
            };

            const followUpDiv = document.createElement('div');
            followUpDiv.className = 'quick-replies';
            followUpDiv.style.marginTop = '10px';

            followUpKeys.forEach(key => {
                const btn = document.createElement('button');
                btn.className = 'quick-reply-btn';
                btn.setAttribute('data-question', key);
                btn.textContent = buttonLabels[key];
                followUpDiv.appendChild(btn);
            });

            chatBody.appendChild(followUpDiv);
            chatBody.scrollTop = chatBody.scrollHeight;
        }
    });
</script>