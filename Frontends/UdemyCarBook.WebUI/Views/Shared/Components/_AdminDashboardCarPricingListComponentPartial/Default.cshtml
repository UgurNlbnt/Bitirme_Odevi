@model List<ResuıltCarPricingWithTimePeriodAndBrandViewModel>
<div class="col-xl-7">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="card-title mb-1 fw-bold">Araç Fiyatlandırma</h4>
                    <p class="card-subtitle text-muted font-size-13 mb-0">
                       Araçların Saatlik,GünlüK,Haftalık,Aylık Kiralama Ücretleri Verilmiştir
                    </p>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0 rounded-start">Araç</th>
                            <th class="border-0 text-center">Saatlik</th>
                            <th class="border-0 text-center">Günlük</th>
                            <th class="border-0 text-center">Haftalık</th>
                            <th class="border-0 text-center rounded-end">Aylık</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <img src="@item.coverImageUrl"
                                                 alt="@item.brandName @item.brandModel"
                                                 class="rounded-circle shadow-sm"
                                                 style="width: 50px; height: 50px; object-fit: cover; border: 3px solid #f8f9fa;">
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-0 fw-semibold mx-2">@item.brandName</h6>
                                            <p class="text-muted mb-0 font-size-12 mx-2">@item.brandModel</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-soft-primary text-primary font-size-12 px-3 py-2">
                                        @item.hourlyAmount ₺
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-soft-success text-success font-size-12 px-3 py-2">
                                        @item.dailyAmount ₺
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-soft-info text-info font-size-12 px-3 py-2">
                                        @item.weeklyAmount ₺
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-soft-warning text-warning font-size-12 px-3 py-2">
                                        @item.monthlyAmount ₺
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .badge.bg-soft-primary {
        background-color: rgba(85, 110, 230, 0.1);
    }

    .badge.bg-soft-success {
        background-color: rgba(52, 195, 143, 0.1);
    }

    .badge.bg-soft-info {
        background-color: rgba(80, 165, 241, 0.1);
    }

    .badge.bg-soft-warning {
        background-color: rgba(252, 185, 44, 0.1);
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: all 0.3s ease;
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
    }
</style>