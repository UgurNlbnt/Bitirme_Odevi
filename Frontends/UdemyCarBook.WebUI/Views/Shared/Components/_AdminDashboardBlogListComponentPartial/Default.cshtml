@model List<GetAllBlogWithOthersViewModel>
<div class="col-xl-5">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="card-title mb-1 fw-bold">Blog Listesi</h4>
                    <p class="card-subtitle text-muted font-size-13 mb-0">
                        Blogların Başlıkları ve Yazarları Verilmiştir
                    </p>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom">
                                <td class="py-3">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="flex-grow-1">
                                            <h5 class="font-size-15 mb-2 fw-semibold text-dark">
                                                @item.Title
                                            </h5>
                                            <div class="d-flex align-items-center">
                                                <i class="mdi mdi-account-circle text-primary mX-2" style="font-size: 15px;"></i>
                                                <span class="text-muted font-size-13">  @item.AuthorName</span>
                                            </div>
                                        </div>
                                        <div class="flex-shrink-0 ms-3">
                                            <a href="/Blog/BlogDetail/@item.BlogId"
                                               class="btn btn-primary btn-sm px-3">
                                                Blog Aç
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: all 0.3s ease;
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    .btn-sm {
        font-size: 13px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-sm:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }
</style>