@model ResultStatisticViewModel

<section class="ftco-section bg-light" id="section-counter">
    <!-- Üst Çizgi -->
    <div class="section-line top-line"></div>

    <div class="container py-5">
        <div class="row text-center justify-content-center">
            <!-- Araç Sayısı -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="counter-card">
                    <strong class="number" data-number="@ViewBag.carCount">0</strong>
                    <span class="label">Toplam Araç Sayısı</span>
                </div>
            </div>

            <!-- Lokasyon Sayısı -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="counter-card">
                    <strong class="number" data-number="@ViewBag.LocationCount">0</strong>
                    <span class="label">Toplam Lokasyon Sayısı</span>
                </div>
            </div>

            <!-- Marka Sayısı -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="counter-card">
                    <strong class="number" data-number="@ViewBag.BrandCount">0</strong>
                    <span class="label">Toplam Marka / Model</span>
                </div>
            </div>

            <!-- Blog Sayısı -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="counter-card">
                    <strong class="number" data-number="@ViewBag.BlogCount">0</strong>
                    <span class="label">Toplam Blog Sayısı</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Alt Çizgi -->
</section>

<style>
    /* Genel arka plan */
    #section-counter {
        background: linear-gradient(180deg, #f9f9fb, #ffffff);
        position: relative;
    }

    .top-line {
        margin-bottom: 50px;
    }

    .bottom-line {
        margin-top: 50px;
    }

    /* Kart stili */
    .counter-card {
        background: #fff;
        border-radius: 14px;
        padding: 40px 20px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border-top: 4px solid #667eea;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .counter-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.12);
        border-top-color: #764ba2;
    }

    /* Sayı kısmı */
    .number {
        font-size: 42px;
        font-weight: 700;
        color: #333;
        margin-bottom: 10px;
        transition: color 0.3s ease;
    }

    /* Yazı kısmı */
    .label {
        font-size: 16px;
        color: #666;
        letter-spacing: 0.3px;
    }

    /* Hover rengi */
    .counter-card:hover .number {
        color: #764ba2;
    }

</style>
