@model List<ResultCarViewModel>
@{
    ViewData["Title"] = "Araç Listesi";

    Layout = "~/Views/AdminLayout/Index.cshtml";

    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-11">
                <div
                    class="card shadow-lg border-custom-primary rounded-4 overflow-hidden animate__animated animate__fadeIn">

                    <!-- HEADER -->
                    <div class="card-header bg-gradient-custom text-white text-center py-4">
                        <h3 class="fw-bold mb-0 text-white">
                            Araç Listesi
                        </h3>
                    </div>

                    <div class="card-body p-4">
                        <p class="text-center text-muted mb-4 fs-6">
                            Aşağıdaki listeden araç bilgilerini görüntüleyebilir,
                            <strong>ekleme</strong>, <strong>silme</strong> ve <strong>güncelleme</strong> işlemlerini
                            gerçekleştirebilirsiniz.
                        </p>

                        <!-- TABLE -->
                        <div class="table-responsive">
                            <table class="table table-hover align-middle text-center mb-0">
                                <thead class="bg-gradient-custom text-white">
                                    <tr>
                                        <th>#</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>KM</th>
                                        <th>Vites</th>
                                        <th>Koltuk</th>
                                        <th>Bagaj</th>
                                        <th>Yakıt</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)

                                    {

                                        count++;
                                        <tr class="table-row-hover">
                                            <td class="fw-bold">@count</td>
                                            <td class="fw-semibold text-dark">@item.BrandName</td>
                                            <td>@item.BrandModel</td>
                                            <td>@item.Km.ToString("N0")</td>
                                            <td>@item.Transmission</td>
                                            <td>@item.Seat</td>
                                            <td>@item.Luggage</td>
                                            <td>@item.Fuel</td>
                                            <td>
                                                <div class="d-flex justify-content-center gap-2 flex-wrap">
                                                    <a href="/AdminCar/UpdateCar/@item.CarId"
                                                        class="btn btn-sm btn-outline-primary">
                                                        <i class="mdi mdi-pencil-outline"></i> Güncelle
                                                    </a>
                                                    <a href="/Admin/AdminCarDetails/Index/@item.CarId"
                                                        class="btn btn-sm btn-outline-primary">
                                                        <i class="mdi mdi-information-outline"></i> Detaylar
                                                    </a>
                                                    <a href="/Admin/AdminCarFeatureDetail/Index/@item.CarId"
                                                        class="btn btn-sm btn-outline-primary">
                                                        <i class="mdi mdi-alpha-c-circle-outline"></i> Özellikler
                                                    </a>
                                                    <a href="/AdminCar/DeleteCar/@item.CarId"
                                                        class="btn btn-sm btn-outline-primary">
                                                        <i class="mdi mdi-delete-outline"></i> Sil
                                                    </a>
                                                    <a href="/AdminCar/PriceDetail/@item.CarId"
                                                        class="btn btn-sm btn-outline-primary">
                                                        <i class="mdi mdi-cash"></i> Fiyat Bilgisi
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- ADD NEW BUTTON -->
                        <div class="text-end mt-4">
                            <a href="/AdminCar/CreateCar" class="btn btn-gradient-custom px-4 py-2 shadow-sm rounded-3">
                                <i class="mdi mdi-plus-circle-outline me-1"></i> Yeni Araç Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- STYLES -->
<style>
    /* Gradient Tema (mor-mavi) */
    .bg-gradient-custom,
    .btn-gradient-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: #fff;
    }

    .btn-gradient-custom:hover {
        background: linear-gradient(135deg, #4b5eeb 0%, #603a89 100%);
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(102, 126, 234, 0.4) !important;
        color: #fff;
    }

    .border-custom-primary {
        border: 2px solid #667eea !important;
    }

    .table-row-hover:hover {
        background-color: rgba(102, 126, 234, 0.1) !important;
        transition: 0.3s;
    }

    .d-flex.gap-2 {
        gap: 0.25rem !important;
    }

    .card {
        transition: all 0.3s ease;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
    }

    .btn {
        transition: all 0.3s ease;
    }

    .btn-outline-primary:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        border: none;
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(118, 75, 162, 0.3) !important;
    }
</style>
