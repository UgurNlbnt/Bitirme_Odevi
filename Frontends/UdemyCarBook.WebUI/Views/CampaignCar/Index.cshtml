@{
	ViewData["Title"] = "Kampanyalar";
	Layout = "~/Views/UILayout/Index.cshtml";
}

<!-- Kampanyalar -->
<section class="ftco-section bg-light">
	<div class="container">
		<div class="row justify-content-center mb-5">
			<div class="col-md-12 text-center heading-section ftco-animate">
				<span class="subheading">Özel Fırsatlar</span>
				<h2 class="mb-2">Kampanyalarımız</h2>
			</div>
		</div>
		<div class="row">
			<!-- Kampanya 1: İlk Kiralama -->
			<div class="col-md-6 col-lg-4 d-flex">
				<div class="campaign-card">
					<!-- Araç Görseli -->
					<div class="campaign-image-wrapper">
						<img src="https://images.unsplash.com/photo-1449965408869-eaa3f722e40d?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="İlk Kiralama Kampanyası" class="campaign-image">
						<div class="campaign-overlay"></div>
						<div class="campaign-badge">
							<span class="badge-discount">%20</span>
							<span class="badge-text">İNDİRİM</span>
						</div>
					</div>
					<!-- Kampanya İçeriği -->
					<div class="campaign-body">
						<div class="campaign-header">
							<h3>İlk Kiralama Kampanyası</h3>
							<p class="campaign-subtitle">Yeni müşterilerimize özel</p>
						</div>
						<ul class="campaign-features">
							<li>
								<i class="fas fa-check-circle"></i>
								<span>Yeni müşterilere özel</span>
							</li>
							<li>
								<i class="fas fa-check-circle"></i>
								<span>Tüm araç kategorileri</span>
							</li>
							<li>
								<i class="fas fa-check-circle"></i>
								<span>Minimum 1 günlük kiralama</span>
							</li>
							<li>
								<i class="fas fa-check-circle"></i>
								<span>31 Aralık 2025'e kadar geçerli</span>
							</li>
						</ul>
						<a href="/Default/Index" class="btn btn-success btn-block campaign-btn">
							Hemen Kirala
							<i class="fas fa-arrow-right ml-2"></i>
						</a>
					</div>
				</div>
			</div>

			<!-- Kampanya 2: Haftalık Kiralama -->
			<div class="col-md-6 col-lg-4 d-flex">
				<div class="campaign-card featured">
					<!-- Popüler Rozet -->
					<div class="popular-badge">
						<i class="fas fa-star"></i> POPÜLER
					</div>
					<!-- Araç Görseli -->
					<div class="campaign-image-wrapper">
						<img src="https://images.unsplash.com/photo-1514316454349-750a7fd3da3a?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NTd8fGNhcnxlbnwwfHwwfHx8MA%3D%3D" alt="Haftalık Kiralama Kampanyası" class="campaign-image">
						<div class="campaign-overlay"></div>
						<div class="campaign-badge featured-badge">
							<span class="badge-discount">%25</span>
							<span class="badge-text">İNDİRİM</span>
						</div>
					</div>
					<!-- Kampanya İçeriği -->
					<div class="campaign-body">
						<div class="campaign-header">
							<h3>Haftalık Kiralama Kampanyası</h3>
							<p class="campaign-subtitle" style="color:#FFC50F!important">En çok tercih edilen</p>
						</div>
						<ul class="campaign-features">
							<li>
								<i class="fas fa-check-circle"></i>
								<span>7 gün ve üzeri kiralamalar</span>
							</li>
							<li>
								<i class="fas fa-check-circle"></i>
								<span>Ekstra kilometre paketi</span>
							</li>
							<li>
								<i class="fas fa-check-circle"></i>
								<span>Ücretsiz araç değişimi</span>
							</li>
							<li>
								<i class="fas fa-check-circle"></i>
								<span>Esnek iade koşulları</span>
							</li>
						</ul>
						<a href="/Default/Index" class="btn btn-warning btn-block campaign-btn" style="background-color:#FFC50F!important">
							Hemen Kirala
							<i class="fas fa-arrow-right ml-2"></i>
						</a>
					</div>
				</div>
			</div>

			<!-- Kampanya 3: Aylık Kiralama -->
			<div class="col-md-6 col-lg-4 d-flex">
				<div class="campaign-card">
					<!-- Araç Görseli -->
					<div class="campaign-image-wrapper">
						<img src="https://plus.unsplash.com/premium_photo-1661346083055-2d30a23116ab?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8ODV8fHJlbnQlMjBhJTIwY2FyfGVufDB8fDB8fHww" alt="Aylık Kiralama Kampanyası" class="campaign-image">
						<div class="campaign-overlay"></div>
						<div class="campaign-badge premium-badge">
							<span class="badge-discount">%30</span>
							<span class="badge-text">İNDİRİM</span>
						</div>
					</div>
					<!-- Kampanya İçeriği -->
					<div class="campaign-body">
						<div class="campaign-header">
							<h3>Aylık Kiralama Kampanyası</h3>
							<p class="campaign-subtitle">Maksimum tasarruf</p>
						</div>
						<ul class="campaign-features">
							<li>
								<i class="fas fa-check-circle"></i>
								<span>30 gün ve üzeri kiralamalar</span>
							</li>
							<li>
								<i class="fas fa-check-circle"></i>
								<span>Sınırsız kilometre</span>
							</li>
							<li>
								<i class="fas fa-check-circle"></i>
								<span>Ücretsiz bakım hizmeti</span>
							</li>
							<li>
								<i class="fas fa-check-circle"></i>
								<span>7/24 yol yardım desteği</span>
							</li>
						</ul>
						<a href="/Default/Index" class="btn btn-primary btn-block campaign-btn">
							Hemen Kirala
							<i class="fas fa-arrow-right ml-2"></i>
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	/* Kampanya Kartları - Eşit Yükseklik */
	.campaign-card {
		background: white;
		border-radius: 15px;
		overflow: hidden;
		box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
		transition: all 0.4s ease;
		display: flex;
		flex-direction: column;
		height: 100%;
		margin-bottom: 30px;
		position: relative;
	}

	.campaign-card:hover {
		transform: translateY(-10px);
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
	}

	/* Featured (Popüler) Kart */
	.campaign-card.featured {
		border: 3px solid #01d28e;
		transform: scale(1.03);
	}

	.campaign-card.featured:hover {
		transform: translateY(-10px) scale(1.03);
	}

	/* Popüler Rozeti */
	.popular-badge {
		position: absolute;
		top: 15px;
		left: 15px;
		background: #FFC50F;
		color: #333;
		padding: 8px 15px;
		border-radius: 25px;
		font-weight: 700;
		font-size: 0.75rem;
		z-index: 10;
		box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
		letter-spacing: 0.5px;
	}

	.popular-badge i {
		margin-right: 5px;
	}

	/* Araç Görseli */
	.campaign-image-wrapper {
		position: relative;
		height: 280px;
		overflow: hidden;
	}

	.campaign-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.4s ease;
	}

	.campaign-card:hover .campaign-image {
		transform: scale(1.1);
	}

	/* Overlay Efekti */
	.campaign-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(to bottom, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.4) 100%);
		z-index: 1;
	}

	/* İndirim Rozeti */
	.campaign-badge {
		position: absolute;
		bottom: 20px;
		right: 20px;
		background: linear-gradient(135deg, #01d28e, #00b074);
		color: white;
		padding: 15px 25px;
		border-radius: 12px;
		text-align: center;
		box-shadow: 0 5px 20px rgba(1, 210, 142, 0.4);
		z-index: 2;
		transform: rotate(-5deg);
		transition: transform 0.3s ease;
	}

	.campaign-card:hover .campaign-badge {
		transform: rotate(0deg) scale(1.1);
	}

	.campaign-badge.featured-badge {
		background: #FFC50F ;
		box-shadow: 0 5px 20px rgba(245, 87, 108, 0.4);
	}

	.campaign-badge.premium-badge {
		background: linear-gradient(135deg, #4facfe, #00f2fe);
		box-shadow: 0 5px 20px rgba(79, 172, 254, 0.4);
	}

	.badge-discount {
		display: block;
		font-size: 2rem;
		font-weight: 900;
		line-height: 1;
	}

	.badge-text {
		display: block;
		font-size: 0.75rem;
		font-weight: 600;
		margin-top: 3px;
		letter-spacing: 1px;
	}

	/* Kampanya İçeriği */
	.campaign-body {
		padding: 30px;
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	.campaign-header {
		margin-bottom: 25px;
	}

	.campaign-header h3 {
		font-size: 1.5rem;
		font-weight: 700;
		color: #333;
		margin-bottom: 8px;
		line-height: 1.3;
	}

	.campaign-subtitle {
		color: #01d28e;
		font-size: 0.95rem;
		font-weight: 600;
		margin-bottom: 0;
	}

	.campaign-subtitle2 {
		color: #01d28e;
		font-size: 0.95rem;
		font-weight: 600;
		margin-bottom: 0;
	}


	.campaign-card.featured .campaign-subtitle {
		color: #f5576c;
	}

	/* Özellikler Listesi */
	.campaign-features {
		list-style: none;
		padding: 0;
		margin-bottom: 25px;
		flex: 1;
	}

	.campaign-features li {
		padding: 10px 0;
		display: flex;
		align-items: flex-start;
		font-size: 0.9rem;
		color: #666;
		border-bottom: 1px solid #f0f0f0;
	}

	.campaign-features li:last-child {
		border-bottom: none;
	}

	.campaign-features i {
		color: #01d28e;
		margin-right: 12px;
		font-size: 1rem;
		margin-top: 2px;
		flex-shrink: 0;
	}

	.campaign-card.featured .campaign-features i {
		color: #f5576c;
	}

	/* Buton */
	.campaign-btn {
		background: linear-gradient(135deg, #01d28e, #00b074);
		border: none;
		color: white !important;
		padding: 14px 25px;
		font-weight: 600;
		border-radius: 8px;
		transition: all 0.3s ease;
		font-size: 1rem;
		text-align: center;
	}

	.campaign-btn:hover {
		background: linear-gradient(135deg, #00b074, #01d28e) !important;
		transform: translateY(-2px);
		box-shadow: 0 5px 15px rgba(1, 210, 142, 0.3);
	}

	.campaign-card.featured .campaign-btn {
		background: #FFC50F !important;
	}

	.campaign-card.featured .campaign-btn:hover {
			background: linear-gradient(135deg, #ffb347, #ff7b00) !important;
			box-shadow: 0 5px 15px rgba(245, 87, 108, 0.3);
	}

	.campaign-btn i {
		transition: transform 0.3s ease;
	}

	.campaign-btn:hover i {
		transform: translateX(5px);
	}

</style>
