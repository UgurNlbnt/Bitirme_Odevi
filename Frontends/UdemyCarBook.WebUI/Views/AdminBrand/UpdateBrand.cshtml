@model UpdateBrandViewModel

@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card shadow-sm border-0" style="width: 100%; max-width: 520px; border-radius: 12px;">
        <div class="card-header text-white text-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 12px 12px 0 0; padding: 1.5rem;">
            <h5 class="mb-0 text-white fw-semibold"><i class="mdi mdi-car-plus me-2"></i>Marka ve Model Güncelle</h5>
        </div>
        <div class="card-body p-4">
            <form id="createBrandForm" method="post">
                <input  type="hidden" asp-for="brandId"/>
                <div class="mb-3">
                    <label asp-for="name" class="form-label text-dark fw-semibold">Marka Adı</label>
                    <input asp-for="name" class="form-control form-control-lg" placeholder="Örn: BMW" style="border-radius: 8px;" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="model" class="form-label text-dark fw-semibold">Markaya Ait Model Adı</label>
                    <input asp-for="model" class="form-control form-control-lg" placeholder="Örn: 320" style="border-radius: 8px;" />
                    <span asp-validation-for="model" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 btn-lg" style="border-radius: 8px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                    <i class="mdi mdi-content-save me-1"></i> Kaydet
                </button>
            </form>
        </div>
        <div class="card-footer bg-light text-center" style="border-radius: 0 0 12px 12px;">
            <small class="text-muted">Sadece Marka ve Model İsmi Giriniz</small>
        </div>
    </div>
</div>

<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const form = document.getElementById("createBrandForm");
    form.addEventListener("submit", function (event) {
        event.preventDefault(); // formu hemen göndermeyi durdurur
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu Markayı ve Modeli Güncellemek üzeresiniz!",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, Kaydet',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                form.submit(); // kullanıcı onaylarsa formu gönder
            }
        });
    });
</script>
