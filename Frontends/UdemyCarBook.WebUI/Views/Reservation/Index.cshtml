@model CreateReservationViewModel
@{
    ViewData["Title"] = "Rezervasyon Yap";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<style>
    body {
        background: linear-gradient(180deg, #f5f7fa, #ffffff);
        font-family: 'Inter', sans-serif;
    }

    .reservation-section {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 80px 20px;
    }

    .reservation-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 10px 60px rgba(0, 0, 0, 0.08);
        padding: 0;
        max-width: 900px;
        width: 100%;
        overflow: hidden;
        animation: fadeIn 0.6s ease;
    }

    /* 🔹 Araç Görsel Bölümü */
    .car-showcase {
        position: relative;
        width: 100%;
        height: 400px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .car-showcase::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(180deg, transparent 0%, rgba(0,0,0,0.3) 100%);
        z-index: 1;
    }

    .car-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .car-showcase:hover .car-image {
        transform: scale(1.08);
    }

    .car-info-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 30px 40px;
        background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, transparent 100%);
        z-index: 2;
    }

   .car-name-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        background: rgba(255, 255, 255, 0.18);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.25);
        padding: 14px 34px;
        border-radius: 40px;
        font-size: 20px;
        font-weight: 600;
        color: #fff;
        letter-spacing: 0.6px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        text-transform: capitalize;
        transition: all 0.35s ease;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.35);
    }

    .car-name-badge:hover {
        transform: translateY(-2px) scale(1.02);
        box-shadow: 0 12px 32px rgba(102, 126, 234, 0.35);
        background: rgba(255, 255, 255, 0.28);
    }

    /* 🔹 Form Bölümü */
    .form-container {
        padding: 50px 60px;
    }

    .reservation-card h2 {
        font-weight: 700;
        color: #2d3436;
        text-align: center;
        margin-bottom: 35px;
        font-size: 26px;
        position: relative;
        padding-bottom: 15px;
    }

    .reservation-card h2::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 4px;
        background: linear-gradient(90deg, #6c63ff, #5145cd);
        border-radius: 2px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        color: #444;
        margin-bottom: 8px;
        display: block;
        font-size: 14px;
    }

    .form-control {
        height: 50px;
        border-radius: 12px;
        border: 2px solid #e8e8e8;
        padding: 0 16px;
        font-size: 15px;
        transition: all 0.3s ease;
        width: 100%;
        background: #fafafa;
    }

    .form-control:focus {
        border-color: #6c63ff;
        box-shadow: 0 0 0 4px rgba(108, 99, 255, 0.1);
        outline: none;
        background: #fff;
    }

    .form-control:hover {
        border-color: #d0d0d0;
        background: #fff;
    }

    .form-control[readonly] {
        background: #f0f0f0;
        cursor: not-allowed;
        color: #666;
    }

    textarea.form-control {
        min-height: 110px;
        resize: vertical;
        padding: 14px 16px;
    }

    .form-row {
        display: flex;
        gap: 20px;
    }

    .form-row .form-group {
        flex: 1;
    }

    .btn-submit {
        width: 100%;
        border: none;
        border-radius: 10px;
        background: linear-gradient(90deg, #6c63ff, #5145cd);
        color: white;
        font-weight: 600;
        padding: 14px;
        font-size: 16px;
        letter-spacing: 0.4px;
        transition: 0.3s ease;
    }

    .btn-submit:hover {
        background: linear-gradient(90deg, #5145cd, #6c63ff);
        transform: translateY(-1px);
    }


    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .form-container {
            padding: 40px 30px;
        }

        .car-showcase {
            height: 300px;
        }

        .form-row {
            flex-direction: column;
            gap: 0;
        }

        .car-name-badge {
            font-size: 13px;
            padding: 10px 20px;
        }
    }

    /* SweetAlert Tasarımı */
    .swal-modern-popup {
        border-radius: 18px !important;
        padding: 2.5rem !important;
        box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.3) !important;
    }

    .swal-modern-title {
        font-size: 1.6rem !important;
        margin-bottom: 0.8rem !important;
        font-weight: 700 !important;
    }

    .swal-modern-text {
        font-size: 1rem !important;
        line-height: 1.6 !important;
    }

    .swal-modern-button {
        border-radius: 12px !important;
        padding: 14px 36px !important;
        font-size: 1rem !important;
        font-weight: 600 !important;
        transition: all 0.3s ease !important;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2) !important;
    }

    .swal-modern-button:hover {
        transform: translateY(-2px) !important;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25) !important;
    }

    .swal2-icon {
        border-width: 4px !important;
        margin: 1.5rem auto 1rem !important;
    }
</style>

<section class="reservation-section">
    <div class="reservation-card">
        <!-- 🔹 Araç Görseli -->
        @if (ViewBag.ımage != null)
        {
            <div class="car-showcase">
                <img src="@ViewBag.ımage" alt="@ViewBag.v3" class="car-image" />
                <div class="car-info-overlay">
                    @if (ViewBag.v3 != null)
                    {
                        <div class="car-name-badge">@ViewBag.v3</div>
                    }
                </div>
            </div>
        }

        <!-- 🔹 Form Bölümü -->
        <form asp-action="Index" method="post" class="form-container">
            <input type="hidden" asp-for="CarID" value="@ViewBag.carid" />
            <h2>Rezervasyon Bilgileri</h2>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Adınız</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Adınızı girin" />
                </div>
                <div class="form-group">
                    <label class="form-label">Soyadınız</label>
                    <input type="text" asp-for="Surname" class="form-control" placeholder="Soyadınızı girin" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">E-posta Adresiniz</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                </div>
                <div class="form-group">
                    <label class="form-label">Telefon Numaranız</label>
                    <input type="text" asp-for="Phone" class="form-control" placeholder="0500 000 00 00" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Alınacak Lokasyon</label>
                    @Html.DropDownListFor(x => x.PickUpLocationID, (List<SelectListItem>)ViewBag.LocationItems, "Lokasyon Seçiniz", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="form-label">Teslim Edilecek Lokasyon</label>
                    @Html.DropDownListFor(x => x.DropOffLocationID, (List<SelectListItem>)ViewBag.LocationItems, "Lokasyon Seçiniz", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Yaşınız</label>
                    <input type="number" asp-for="Age" class="form-control" placeholder="25" />
                </div>
                <div class="form-group">
                    <label class="form-label">Ehliyet Yaşı (Yıl)</label>
                    <input type="number" asp-for="DriveLicenseYear" class="form-control" placeholder="5" />
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Ek Notlar ve İstekler</label>
                <textarea asp-for="Description" class="form-control" placeholder="Özel istekleriniz veya notlarınız varsa buraya yazabilirsiniz..."></textarea>
            </div>

            <button type="submit" class="btn-submit">Rezervasyonu Onayla</button>
        </form>
    </div>
</section>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const status = '@TempData["ReservationState"]';
        
        if (status === 'success') {
            Swal.fire({
                title: '<strong style="font-family: \'Inter\', sans-serif; font-weight: 700;"> Rezervasyon Oluşturuldu</strong>',
                html: '<p style="font-family: \'Inter\', sans-serif; color: #64748b; margin-top: 8px;">Talebiniz başarıyla alındı. Ekibimiz en kısa sürede sizinle iletişime geçecektir.</p>',
                icon: 'success',
                background: '#ffffff',
                backdrop: 'rgba(0, 0, 0, 0.5)',
                color: '#1e293b',
                iconColor: '#10b981',
                confirmButtonText: '<span style="font-weight: 600; letter-spacing: 0.3px;">Anladım</span>',
                confirmButtonColor: '#10b981',
                customClass: {
                    popup: 'swal-modern-popup',
                    title: 'swal-modern-title',
                    htmlContainer: 'swal-modern-text',
                    confirmButton: 'swal-modern-button'
                }
            });
        } else if (status === 'error') {
            Swal.fire({
                title: '<strong style="font-family: \'Inter\', sans-serif; font-weight: 700;"> İşlem Başarısız</strong>',
                html: '<p style="font-family: \'Inter\', sans-serif; color: #64748b; margin-top: 8px;">Rezervasyon işleminiz tamamlanamadı. Lütfen bilgilerinizi kontrol edip tekrar deneyiniz.</p>',
                icon: 'error',
                background: '#ffffff',
                backdrop: 'rgba(0, 0, 0, 0.5)',
                color: '#1e293b',
                iconColor: '#ef4444',
                confirmButtonText: '<span style="font-weight: 600; letter-spacing: 0.3px;">Tekrar Dene</span>',
                confirmButtonColor: '#ef4444',
                customClass: {
                    popup: 'swal-modern-popup',
                    title: 'swal-modern-title',
                    htmlContainer: 'swal-modern-text',
                    confirmButton: 'swal-modern-button'
                }
            });
        }
    });
</script>