@model CreatePricingViewModel

@{
    ViewData["Title"] = "CreatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="d-flex align-items-center justify-content-center" style="min-height: 100vh; padding-top: 2rem;">
    <div class="card shadow-sm border-0" style="width: 100%; max-width: 450px; border-radius: 12px;">
        <div class="card-header text-white text-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 12px 12px 0 0; padding: 1.25rem;">
            <h5 class="mb-0 text-white fw-semibold"><i class="mdi mdi-car-plus me-2"></i>Periyot Ekle</h5>
        </div>
        <div class="card-body p-3">
            <form id="createCategoryForm" method="post">
                <div class="mb-2">
                    <label asp-for="Name" class="form-label text-dark fw-semibold">Periyot Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Örn: Günlük,Haftalık,Aylık" style="border-radius: 8px;" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100" style="border-radius: 8px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                    <i class="mdi mdi-content-save me-1"></i> Kaydet
                </button>
            </form>
        </div>
        <div class="card-footer bg-light text-center" style="border-radius: 0 0 12px 12px; padding: 0.75rem;">
            <small class="text-muted text-danger d-block">Periyot TÜr Bilgilerini Girerken Lütfen Kontrol Ediniz !</small>
            <small class="text-muted">Bilgileri Girdikten Sonra Kaydet Tuşunu Basmayı Unutmayınız!</small>
        </div>
    </div>
</div>
<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const form = document.getElementById("createCategoryForm");
    form.addEventListener("submit", function (event) {
        event.preventDefault(); // formu hemen göndermeyi durdurur
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu Periyot Türünü Eklemek Üzeresiniz!",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, Kaydet',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                form.submit(); // kullanıcı onaylarsa formu gönder
            }
        });
    });
</script>
