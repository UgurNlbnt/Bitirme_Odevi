@model List<GetAllBlogWithOthersViewModel>
@{
    ViewData["Title"] = "Blog Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-11">
                <div class="card shadow-lg border-custom-primary rounded-4 overflow-hidden animate__animated animate__fadeIn">

                    <!-- HEADER -->
                    <div class="card-header bg-gradient-custom text-white text-center py-4">
                        <h3 class="fw-bold mb-0 text-white">
                            Blog Listesi
                        </h3>
                    </div>

                    <div class="card-body p-4">
                        <p class="text-center text-muted mb-4 fs-6">
                            Aşağıdaki listeden Blogları <strong>görüntüleme</strong> ve<strong>silme</strong> işlemlerini gerçekleştirebilirsiniz. Ancak <strong>ekleme ve güncelleme</strong> yalnızca yazarlar tarafından yapılabilmektedir
                        </p>
                        <!-- TABLE -->
                        <div class="table-responsive">
                            <table class="table table-hover align-middle text-center mb-0">
                                <thead class="bg-gradient-custom text-white">
                                    <tr>
                                        <th>#</th>
                                        <th>Yazar</th>
                                        <th>Kategori</th>
                                        <th>Başlık</th>
                                        <th> Tarih</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr class="table-row-hover">
                                            <td class="fw-bold align-middle" style="width:10%">@count</td>
                                            <td class="align-middle fw-semibold fs-6 text-dark">
                                                @item.AuthorName
                                            </td>
                                            <td class="align-middle fw-semibold fs-6 text-dark">
                                                @item.CategoryName
                                            </td>
                                            <td class="align-middle fw-semibold fs-6 text-dark">
                                                @item.Title
                                            </td>
                                            <td class="align-middle fw-semibold fs-6 text-dark">
                                                @item.CreatedDate.ToShortDateString()
                                            </td>
                                            <!-- İşlemler -->
                                            <td class="align-middle" style="width:30%">
                                                <div class="d-flex justify-content-center gap-2 flex-wrap">
                                                    <a href="/Admin/AdminBlog/DeleteBlog/@item.BlogId" class="btn btn-sm btn-outline-primary">
                                                        <i class="mdi mdi-delete-outline me-1"></i> Kaldır
                                                    </a>
                                                    <a href="/Blog/BlogDetail/@item.BlogId" class="btn btn-sm btn-outline-primary">
                                                        <i class="mdi mdi-eye-outline me-1"></i> Blogu Aç
                                                    </a>
                                                    <a href="/Admin/AdminComment/Index/@item.BlogId" class="btn btn-sm btn-outline-primary">
                                                        <i class="mdi mdi-comment-outline me-1"></i> Yorumlar
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- STYLES -->
