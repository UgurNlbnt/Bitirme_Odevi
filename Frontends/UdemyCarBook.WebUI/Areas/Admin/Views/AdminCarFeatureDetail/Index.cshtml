<script>
    // Switch etiketini dinamik olarak güncelle
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.feature-switch').forEach(function(checkbox) {
            // İlk yüklemede etiket rengini ayarla
            updateSwitchLabel(checkbox);
            
            // Değişiklik olduğunda güncelle
            checkbox.addEventListener('change', function() {
                updateSwitchLabel(this);
            });
        });
    });

    function updateSwitchLabel(checkbox) {
        const label = checkbox.nextElementSibling;
        if (checkbox.checked) {
            label.textContent = 'Var';
            label.classList.remove('text-danger');
            label.classList.add('text-success');
        } else {
            label.textContent = 'Yok';
            label.classList.remove('text-success');
            label.classList.add('text-danger');
        }
    }

    // Form validasyonu
    document.querySelectorAll('form').forEach(function(form) {
        form.addEventListener('submit', function(e) {
            if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            }
            form.classList.add('was-validated');
        });
    });
</script>
