@model List<ResultCarFeatureDetailViewModel>
@{
    ViewData["Title"] = "Araç Detayları";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var carInfo = Model.FirstOrDefault();
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                
                <!-- Geri Dön Butonu -->
                <div class="mb-3">
                    <a href="/AdminCar/Index" class="btn btn-outline-secondary btn-sm">
                        <i class="mdi mdi-arrow-left me-1"></i> Araç Listesine Dön
                    </a>
                </div>

                <!-- Ana Kart -->
                <div class="card shadow-lg border-0 rounded-4 overflow-hidden animate__animated animate__fadeIn">
                    
                    <!-- Header -->
                    <div class="card-header bg-gradient-custom text-white py-4 border-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <h4 class="mb-1 fw-bold text-white text-center">
                                   Araca Ait Özellikler
                                </h4>
                            </div>
                        </div>
                    </div>

                    <!-- Body -->
                    <div class="card-body p-4 p-md-5">
                        
                        <!-- Araç Bilgileri ve Özellik Özeti -->
                        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
                            <h5 class="text-gradient-custom fw-bold mb-0">
                                Araç:   @carInfo.CarName - @carInfo.CarModel
                            </h5>
                            <div class="d-flex gap-2 flex-wrap">
                                <span class="badge badge-success-soft">
                                    <i class="mdi mdi-check-circle me-1"></i>
                                    @Model.Count(x => x.Avaiable) Var
                                </span>
                                <span class="badge badge-danger-soft">
                                    <i class="mdi mdi-close-circle me-1"></i>
                                    @Model.Count(x => !x.Avaiable) Yok
                                </span>
                            </div>
                        </div>

                        <!-- Özellikler Grid -->
                        <!-- Özellikler Grid -->
                        <form method="post">
                            <div class="features-grid mb-4">
                                @for (int i = 0; i < Model.Count; i++)
                                {

                                    <input type="hidden" name="Features[@i].CarFeatureId" value="@Model[i].CarFeatureId" />
                                    <input type="hidden" name="Features[@i].FeatureID" value="@Model[i].FeatureID" />
                                    <input type="hidden" name="Features[@i].FeatureName" value="@Model[i].FeatureName" />
                                    <input type="hidden" name="Features[@i].CarName" value="@Model[i].CarName" />
                                    <input type="hidden" name="Features[@i].CarID" value="@Model[i].CarID" />
                                    <input type="hidden" name="Features[@i].CarModel" value="@Model[i].CarModel" />
                                    

                                    <div class="feature-item @(Model[i].Avaiable ? "feature-available" : "feature-unavailable")">
                                        <div class="feature-icon">
                                            <i class="mdi @(Model[i].Avaiable ? "mdi-check-circle-outline" : "mdi-close-circle-outline")"></i>
                                        </div>
                                        <div class="feature-content">
                                            <h6 class="feature-name mb-1">@Model[i].FeatureName</h6>
                                            <span class="feature-status">@(Model[i].Avaiable ? "Mevcut" : "Mevcut Değil")</span>
                                        </div>
                                       @*  //Kullanıcı bu kutucuğu işaretlerse, form gönderildiğinde "true" değeri gider.
                                        Ama işaretlenmezse hiçbir şey gönderilmez (boş kalır).
                                        Yani value="true" demek “bu kutu seçilirse gönderilecek değer true olsun” anlamına gelir.
                                        Bu checkbox’ı sayfa açıldığında otomatik olarak işaretli yapmaz. *@
                                        <div class="feature-checkbox-wrapper">
                                            <div class="form-check">
                                                <input class="form-check-input feature-grid-checkbox"
                                                       type="checkbox"
                                                       name="Features[@i].Avaiable"
                                                       value="true"
                                                @(Model[i].Avaiable ? "checked" : "")
                                                       id="grid_feature_@i"
                                                       aria-label="@Model[i].FeatureName durumu">
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Kaydet Butonu -->
                            <div class="text-center mb-5">
                                <button type="submit" class="btn btn-gradient-custom btn-lg px-5">
                                    Değişiklikleri Kaydet
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

