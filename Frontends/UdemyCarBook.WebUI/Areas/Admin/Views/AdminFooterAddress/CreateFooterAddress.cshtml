@model CreateFooterAddressViewModel

@{
    ViewData["Title"] = "CreateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 100vh; padding-top: 2rem;">
    <div class="card shadow-sm border-0" style="width: 100%; max-width: 450px; border-radius: 12px;">
        <div class="card-header text-white text-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 12px 12px 0 0; padding: 1.25rem;">
            <h5 class="mb-0 text-white fw-semibold"><i class="mdi mdi-car-plus me-2"></i>İletişim Ve Adres Ekle</h5>
        </div>
        <div class="card-body p-3">
            <form id="createFooterForm" method="post">
                <div class="mb-2">
                    <label asp-for="Address" class="form-label text-dark fw-semibold">Adres</label>
                    <input asp-for="Address" class="form-control" placeholder="Örn: İstanbul/Kadıköy Bağdat Caddesi .... " style="border-radius: 8px;" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Phone" class="form-label text-dark fw-semibold">Numara</label>
                    <input type="tel" asp-for="Phone" class="form-control" placeholder="Örn:05558887766" style="border-radius: 8px;" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-dark fw-semibold">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Örn: Carbook@gmail.com" style="border-radius: 8px;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label text-dark fw-semibold">Açıklama</label>
                    <textarea rows="4" asp-for="Description" class="form-control" placeholder="Örn: CarBook 2010 da kurulan bir araç kiralama şirketidir " style="border-radius: 8px;"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100" style="border-radius: 8px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                    <i class="mdi mdi-content-save me-1"></i> Kaydet
                </button>
            </form>
        </div>
        <div class="card-footer bg-light text-center" style="border-radius: 0 0 12px 12px; padding: 0.75rem;">
            <small class="text-muted text-danger d-block">İletişim ve Adres tablosu yalnızca tek bir kayıt içerecek şekilde tasarlanmıştır !</small>
            <small class="text-muted">Birden fazla veri eklenmesi, veri tutarsızlığına neden olabilir!</small>
        </div>
    </div>
</div>
<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const form = document.getElementById("createFooterForm");
    form.addEventListener("submit", function (event) {
        event.preventDefault(); // formu hemen göndermeyi durdurur
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu Şablonu Eklemek Üzeresiniz!",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, Kaydet',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                form.submit(); // kullanıcı onaylarsa formu gönder
            }
        });
    });
</script>

