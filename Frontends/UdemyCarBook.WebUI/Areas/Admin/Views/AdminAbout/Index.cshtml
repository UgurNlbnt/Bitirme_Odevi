@model List<ResultAboutViewModel>

@{
    ViewData["Title"] = "Hakkımızda Detay ve Yönetimi";
    Layout = "~/Views/AdminLayout/Index.cshtml";

    // Model bir liste olarak gelirse sadece ilk elemanı gösteriyoruz.
    ResultAboutViewModel? about = Model?.FirstOrDefault();
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-11">
                <div class="card shadow-lg border-0 rounded-4 overflow-hidden animate__animated animate__fadeIn">

                    <!-- HEADER -->
                    <div class="card-header bg-gradient-custom text-white text-center py-4">
                        <h3 class="fw-bold mb-0 text-white">
                            Hakkımızda İçeriği Yönetimi
                        </h3>
                    </div>

                    <div class="card-body p-4">
                        <div class="alert alert-primary text-center fw-bold" role="alert">
                            ⚠️ DİKKAT: Bu panelde Hakkımızda için yalnızca
                            <span class="text-danger">TEK BİR</span> Hakkımızda içeriği görüntülenir ve güncellenir.
                        </div>

                        @if (about != null)
                        {
                            <div class="card mb-4 border-custom-primary shadow-sm">
                                <div class="card-header bg-gradient-custom text-white">
                                    <h5 class="mb-0 text-white">Hakkımızda Detayları Id: (@about.aboutId)</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-3">Başlık:</dt>
                                        <dd class="col-sm-9 fw-bold">@about.title</dd>

                                        <dt class="col-sm-3">Açıklama:</dt>
                                        <dd class="col-sm-9">@about.description</dd>

                                        <dt class="col-sm-3">Görsel URL:</dt>
                                        <dd class="col-sm-9 text-truncate">
                                            <a href="@about.imageUrl" target="_blank">@about.imageUrl</a>
                                        </dd>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-primary text-center">
                                Sistemde tanımlı herhangi bir Hakkımızda içeriği bulunamadı.
                                Lütfen "Yeni Ekle" butonunu kullanarak oluşturun.
                            </div>
                        }
                        <div class="d-flex justify-content-end mt-4">
                            @if (about != null)
                            {
                                <a href="/Admin/AdminAbout/UpdateAbout/@about.aboutId"
                                   class="btn btn-gradient-custom px-4 py-2 shadow-sm rounded-3 flex-fill mx-2">
                                    Güncelle <i class="mdi mdi-pencil-outline me-1"></i>
                                </a>

                                <a href="/Admin/AdminAbout/DeleteAbout/@about.aboutId"
                                   class="btn btn-danger px-4 py-2 shadow-sm rounded-3 flex-fill mx-2">
                                    Sil <i class="mdi mdi-delete-outline me-1"></i>
                                </a>
                            }
                            else
                            {
                                <a href="/Admin/AdminAbout/CreateAbout/"
                                   class="btn btn-gradient-custom px-4 py-2 shadow-sm rounded-3 flex-fill mx-2">
                                    Yeni Ekle <i class="mdi mdi-plus-circle-outline me-1"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Yeni Mor-Mavi Gradient Tanımı */
    .bg-gradient-custom, .btn-gradient-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: #fff;
    }

    /* Kart Sınırı Rengi */
    .border-custom-primary {
        border-color: #667eea !important;
        border-width: 2px !important;
    }

    /* Butonlar İçin Genel Stil */
    .btn {
        transition: all 0.3s ease;
    }

    .btn-gradient-custom:hover {
        background: linear-gradient(135deg, #4b5eeb 0%, #603a89 100%);
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(102, 126, 234, 0.4) !important;
        color: #fff;
    }

    .btn-danger {
        transition: all 0.3s ease;
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.4) !important;
        }

    .card {
        transition: all 0.3s ease;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
    }

</style>
