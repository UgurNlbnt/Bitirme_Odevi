@model UpdateCarDto
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Araç Güncelleme Sayfası</h4>
                            <p class="card-subtitle mb-4">Araça ile ilgili temel bilgileri eksizsiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak güncelleme işlemini tamamlayabilirsiniz.</p>

                            <form method="post">
                                <input type="hidden" asp-for="CarId" />
                                <div class="form-group">
                                    <label for="exampleInputBrand">Marka</label>
                                    @Html.DropDownListFor(a => a.BrandId, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputModel">Model</label>
                                    <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model Girişi Yapınız">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputCoverImageUrl">Kapak Fotoğrafı</label>
                                    <input type="text" class="form-control" id="exampleInputCoverImageUrl" asp-for="CoverImageUrl" placeholder="Kapak Fotoğraf Linkini giriniz">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputKm">Kilometre</label>
                                    <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Kilometre Bilgisi Giriniz">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputTransmission">Vites Türü</label>
                                    <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Vites Türünü Yazınız">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputSeat">Koltuk Syısı</label>
                                    <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Koltuk Sayısını giriniz">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputLuggage">Bagaj Sayısı</label>
                                    <input type="number" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Bagaj sayısını giriniz">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputFuel">Yakıt Türü</label>
                                    <input type="text" class="form-control" id="exampleInputFuel" asp-for="Fuel" placeholder="Yakıt Türünü giriniz">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputBigImageUrl">Büyük Kapak Fotoğrafı</label>
                                    <input type="text" class="form-control" id="exampleInputBigImageUrl" asp-for="BigImageUrl" placeholder="Araç detayında gözükecek kapak fotoğraf linkini girin">
                                </div>

                                <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                            </form>

                        </div> <!-- end card-body-->
                    </div>

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
    </div>
</div>
</div>




